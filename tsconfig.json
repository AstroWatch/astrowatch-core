{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/core/__tests__/**"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        // Ensure that Babel can safely transpile files in the TypeScript project
        "isolatedModules": true,
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "outDir": "dist",
        "baseUrl": "types",
        "typeRoots": ["types"],
        "types": [
            "@types/jest",
            "node"
        ],
        "moduleResolution": "node"
    }
}
